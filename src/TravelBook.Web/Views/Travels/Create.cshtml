@model TravelBook.Web.ViewModels.TravelViewModels.NewTravelViewModel

@{
    ViewBag.Title = "Add new travel";
}

<h2>New travel</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Travels" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="UserId" value="@ViewData["userId"]" hidden="hidden" readonly/>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStartTravel" class="control-label"></label>
                <input asp-for="DateStartTravel" class="form-control" />
                <span asp-validation-for="DateStartTravel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinishTravel" class="control-label"></label>
                <input asp-for="DateFinishTravel" class="form-control" />
                <span asp-validation-for="DateFinishTravel" class="text-danger"></span>
            </div>
            <div style="margin-top:10px;">
                <button type="submit">Add travel</button>
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to travels", nameof(TravelsController.All),
                        nameof(TravelsController).CutController())
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
